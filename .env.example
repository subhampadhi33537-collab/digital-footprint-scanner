# ==================================================
# GROQ API CONFIGURATION (REQUIRED)
# ==================================================
# Get your key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_MODEL=llama-3.1-8b-instant

# ==================================================
# FLASK APPLICATION SETTINGS
# ==================================================
FLASK_ENV=production
FLASK_DEBUG=False

# Used for session security (MUST CHANGE in production!)
SECRET_KEY=generate_a_random_secret_key_here

# ==================================================
# APPLICATION SCAN LIMITS (ETHICAL OSINT)
# ==================================================
# Max time (seconds) allowed for one scan
SCAN_TIMEOUT=5

# Max platforms checked per scan
MAX_PLATFORMS=15

# ==================================================
# DATA HANDLING & ETHICS
# ==================================================
# Do not store scans permanently
STORE_SCAN_DATA=False

# ==================================================
# AI RESPONSE SETTINGS
# ==================================================
# Max tokens for Groq responses
GROQ_MAX_TOKENS=512

# Temperature controls creativity (0.0â€“1.0)
GROQ_TEMPERATURE=0.3

# ==================================================
# EMAIL VALIDATION API (OPTIONAL)
# ==================================================
ABSTRACT_API_KEY=your_abstract_api_key_here
ABSTRACT_EMAIL_API_KEY=your_abstract_email_api_key_here

# ==================================================
# GOOGLE OAUTH SETTINGS (FOR VERCEL)
# ==================================================
# Generate from: https://console.cloud.google.com/
GOOGLE_CLIENT_SECRETS_FILE=client_secret.json

# For local development: http://127.0.0.1:5000/callback
# For Vercel: https://your-project.vercel.app/callback
GOOGLE_REDIRECT_URI=https://your-project.vercel.app/callback

# ==================================================
# SESSION CONFIGURATION (For production)
# ==================================================
SESSION_TYPE=filesystem
SESSION_FILE_DIR=.flask_session
